{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../migrations/**/*",
        "outDir": "dist/migrations",
        "watchAssets": true
      },
      {
        "include": "./modules/**/*.js",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}